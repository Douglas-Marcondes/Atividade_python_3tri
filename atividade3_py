import random
import string

nome = input("Digite seu nome: ")

caracteres = string.ascii_letters + string.digits + string.punctuation

antes = ''.join(random.choice(caracteres) for _ in range(6))
depois = ''.join(random.choice(caracteres) for _ in range(20 - len(nome) - 6))

senha = antes + nome + depois

print("Senha gerada:", senha)
